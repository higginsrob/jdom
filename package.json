{
    "name": "jdom",
    "version": "3.1.8",
    "description": "lightweight dom builder",
    "main": "index.js",
    "scripts": {
        "docs": "docco -c style.css index.js",
        "preversion": "npm run docs",
        "postversion": "git push --follow-tags",
        "prettier": "prettier --loglevel=error --write '**/*.js' '**/*.json' '**/*.jsx' '**/*.css' '**/*.md'",
        "start": "webpack-dev-server",
        "test": "mocha test"
    },
    "author": "Rob Higgins <higginsrob@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/higginsrob/jdom.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,css,md}": [
            "prettier --write",
            "git add"
        ],
        "*": [
            "npm run docs",
            "git add"
        ]
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "docco": "^0.8.0",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^6.2.0",
        "eslint-loader": "^2.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.4",
        "lint-staged": "^9.2.3",
        "mocha": "^4.0.1",
        "prettier": "^1.18.2",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.6",
        "webpack-dev-server": "^3.1.4",
        "zombie": "^6.1.4"
    },
    "dependencies": {}
}
