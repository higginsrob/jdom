{
    "name": "jdom",
    "version": "3.2.6",
    "description": "lightweight dom builder",
    "main": "index.js",
    "type": "commonjs",
    "scripts": {
        "predocs": "rm -rf docs",
        "preversion": "npm run prettier",
        "prettier": "prettier --loglevel=error --write '**/*.js' '**/*.json' '**/*.jsx' '**/*.css' '**/*.md'",
        "lint": "eslint index.js",
        "start": "webpack serve",
        "prebuild": "rm -rf ./dist",
        "build": "webpack --env NODE_ENV=production",
        "pretest": "npm run build",
        "posttest": "rm -rf ./dist",
        "test": "mocha test"
    },
    "author": "Rob Higgins <higginsrob@gmail.com>",
    "license": "MIT",
    "keywords": [
        "dom",
        "builder",
        "javascript",
        "functional",
        "svg",
        "elements",
        "factory",
        "lightweight",
        "zero-dependencies",
        "browser"
    ],
    "homepage": "https://higginsrob.github.io/jdom",
    "bugs": {
        "url": "https://github.com/higginsrob/jdom/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/higginsrob/jdom.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-webpack-plugin": "^5.0.2",
        "html-webpack-plugin": "^5.6.4",
        "husky": "^3.1.0",
        "lint-staged": "^12.3.3",
        "mocha": "^11.7.4",
        "prettier": "^1.19.1",
        "puppeteer": "^24.23.0",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    }
}
